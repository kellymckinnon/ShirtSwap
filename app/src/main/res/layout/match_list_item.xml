<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/their_shirt"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="5dp"
                android:contentDescription="@string/content_description_matches_shirt"
                android:scaleType="centerCrop"
                android:src="@android:drawable/ic_menu_camera"
                tools:ignore="RtlHardcoded" />

            <ImageView
                android:id="@+id/double_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/their_shirt"
                android:contentDescription="@string/content_description_double_arrow"
                android:src="@drawable/ic_double_arrow_dashed_primary_dark"
                tools:ignore="RtlHardcoded" />

            <ImageView
                android:id="@+id/your_shirt"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/double_arrow"
                android:contentDescription="@string/content_description_your_shirt"
                android:scaleType="centerCrop"
                android:src="@android:drawable/ic_menu_camera"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/person_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/your_shirt"
                android:layout_toRightOf="@+id/your_shirt"
                android:textSize="24sp"
                tools:text="Name" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/content_description_right_arrow_for_chat"
                android:src="@drawable/ic_keyboard_arrow_right_accent"
                tools:ignore="RtlHardcoded" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>